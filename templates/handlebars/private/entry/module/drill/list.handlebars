{{! private/entry/module/drill/list }}
<div class="module-section drill">
  <div class="section-header">
    <div class="buttons">
      <button class="tiny secondary radius add-model">add model</button>
    </div>
    <h3 class="list-title">Drills</h3>
  </div>
  <div class="row modal-wrapper">
    <div class="click-away-overlay"></div>
    <div class="small-centered small-10 medium-8 large-6 columns modal"></div>
  </div>
  <ul class="model-list row">
    {{#each models}}
      <li class="{{#if details}}has-body {{/if}}model-entry columns">
        <div class="model-header">
          <div class="buttons" data-uri="{{ resource_uri }}">
            <button class="tiny alert radius delete-model">remove</button>
            <button class="tiny success radius edit-model">edit <i class="fa fa-pencil"></i ></button>
          </div>
          <div class="model-title">
            {{ name }}
          </div>
        </div>
        {{#if details}}
          <div class="model-body">
            {{ details }}
          </div>
        {{/if}}
      </li>
    {{/each}}
  </ul>
</div>