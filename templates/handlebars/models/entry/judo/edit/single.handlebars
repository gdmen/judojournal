{{! entry/judo/edit/single }}

<div class="row">

  <div class="columns entry-form-meta">
		<div id="{{ cid }}-save" class="entry-save disabled">
			<i class="saving fa fa-spinner fa-spin"></i>
			<i class="enabled fa fa-floppy-o"></i>
			<i class="disabled fa fa-check"></i>
		</div>
		<div class="entry-info">
			<div id="art"></div>
			<div id="type"></div>
			<div>
				<div id="at"><h3>@</h3></div>
				<div id="location"></div>
			</div>
		</div>
  </div>
  
  <div class="small-6 columns">
    <h4>from:</h4>
		<div id="start"></div>
  </div>
  
  <div class="small-6 columns">
    <h4>until:</h4>
		<div id="end"></div>
  </div>
	
  <div class="columns text-center">
    <div id="date" name="{{ cid }}:date"></div>
  </div>
  
  <div class="columns">
    <h3>pre-training notes:</h3>
  </div>
  <div class="columns">
		<div title="{{ cid }}:pre_status" class="content-editable" contentEditable="true" data-placeholder="How did you feel before?">{{ pre_status }}</div>
  </div>
  
  <div class="columns">
    <h3>post-training notes:</h3>
  </div>
  <div class="columns">
		<div title="{{ cid }}:post_status" class="content-editable" contentEditable="true" data-placeholder="How did you feel after?">{{ post_status }}</div>
  </div>
  
</div>

<div class="row">
  <div class="columns">
    {{> widgets/rating/edit }}
  </div>
</div>

<div class="row">
  <div class="columns">
    <h2>DRILLS</h2>
    <div id="drills"></div>
  </div>
  
</div>

<div class="row">
  <div class="columns">
    <h2>SPARRING</h2>
    <div id="sparring"></div>
  </div>
  
</div>